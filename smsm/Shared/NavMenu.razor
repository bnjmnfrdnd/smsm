
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <div class="row" style="align-items: center;">
            <a href="" class="col-4"><img src="images/logo.png" alt="logo" width="25" height="25"></a>
            <p class="col-8" style="margin: 0px; color: white">SMSM</p>
        </div>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <AuthorizeView>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-bar-chart" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
        </AuthorizeView>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Requests">
                <span class="oi oi-plus" aria-hidden="true"></span> Requests
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Content">
                <span class="oi oi-media-play" aria-hidden="true"></span> Content
            </NavLink>
        </div>
        <AuthorizeView>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Logs">
                    <span class="oi oi-file" aria-hidden="true"></span> Logs
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Settings">
                    <span class="oi oi-cog" aria-hidden="true"></span> Settings
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
